<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="com.github.ashutoshgngwr.minventory.SetPasswordController"
	xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10"
	styleClass="root">

	<Text fx:id="welcomeText" styleClass="header" text="Welcome"
		GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2" />

	<GridPane fx:id="formContainer" alignment="center" hgap="10"
		vgap="10" GridPane.columnIndex="0" GridPane.rowIndex="1"
		GridPane.columnSpan="2">

		<Label text="Business Name:" GridPane.columnIndex="0"
			GridPane.rowIndex="1" />

		<TextField fx:id="businessNameField" promptText="Name of your business"
			GridPane.columnIndex="1" GridPane.rowIndex="1" />

		<Label text="New Username:" GridPane.columnIndex="0"
			GridPane.rowIndex="2" />

		<TextField fx:id="newUsernameField" promptText="New username"
			GridPane.columnIndex="1" GridPane.rowIndex="2" />

		<Label text="New Password:" GridPane.columnIndex="0"
			GridPane.rowIndex="3" />

		<PasswordField fx:id="newPasswordField" promptText="Set new password"
			GridPane.columnIndex="1" GridPane.rowIndex="3" />

		<Label text="Confirm Password:" GridPane.columnIndex="0"
			GridPane.rowIndex="4" />

		<PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"
			GridPane.columnIndex="1" GridPane.rowIndex="4" />

		<HBox spacing="10" alignment="bottom_right" GridPane.columnIndex="1"
			GridPane.rowIndex="5">

			<Button text="Continue" defaultButton="true" onAction="#saveAuthenticationDetails" />

		</HBox>

	</GridPane>

	<stylesheets>
		<URL value="@/style/common.css" />
	</stylesheets>
</GridPane>